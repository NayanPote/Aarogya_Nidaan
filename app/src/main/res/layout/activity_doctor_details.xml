<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#DFF5FF">

    <!-- Toolbar with gradient background -->
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@drawable/toolbar_gradiant"
        android:elevation="8dp">

        <ImageButton
            android:id="@+id/doctor_detail_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/back"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:padding="8dp"
            android:contentDescription="Back"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Doctor's Details"
            android:textSize="22sp"
            android:textStyle="bold"
            android:textColor="#FFFFFF"
            android:layout_marginStart="32dp"/>

    </androidx.appcompat.widget.Toolbar>

    <!-- Content -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/toolbar">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- Doctor Profile Card -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="12dp"
                app:cardElevation="6dp"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="16dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp"
                    android:background="@drawable/card_gradient">

                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal">

                        <!-- Doctor Avatar with Frame -->
                        <androidx.cardview.widget.CardView
                            android:layout_width="140dp"
                            android:layout_height="140dp"
                            app:cardCornerRadius="70dp"
                            app:cardElevation="8dp"
                            android:layout_centerHorizontal="true">

                            <ImageView
                                android:id="@+id/doctor_detail_avatar"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:scaleType="centerCrop"
                                android:src="@drawable/doctoravatar3"
                                android:contentDescription="Doctor's photo"/>

                        </androidx.cardview.widget.CardView>

                        <!-- Verification Badge -->
                        <ImageView
                            android:layout_width="36dp"
                            android:layout_height="36dp"
                            android:src="@drawable/ic_verify"
                            android:layout_alignParentEnd="true"
                            android:layout_marginEnd="10dp"
                            android:contentDescription="Verified Doctor"/>

                    </RelativeLayout>

                    <!-- Doctor Name -->
                    <TextView
                        android:id="@+id/doctor_detail_name"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="24sp"
                        android:textStyle="bold"
                        android:textColor="#FFFFFF"
                        android:gravity="center"
                        android:layout_marginTop="16dp"/>

                    <!-- Rating Bar and Reviews Count -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center"
                        android:layout_marginTop="8dp">

                        <RatingBar
                            android:id="@+id/doctor_rating_bar"
                            style="?android:attr/ratingBarStyleSmall"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:numStars="5"
                            android:rating="4.5"
                            android:stepSize="0.1"
                            android:progressTint="#FFD700"
                            android:isIndicator="true"/>

                        <TextView
                            android:id="@+id/doctor_rating_value"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="4.5"
                            android:textColor="#FFFFFF"
                            android:textSize="16sp"
                            android:layout_marginStart="8dp"/>

                        <TextView
                            android:id="@+id/doctor_reviews_count"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="(124 reviews)"
                            android:textColor="#E0E0E0"
                            android:textSize="14sp"
                            android:layout_marginStart="8dp"/>

                    </LinearLayout>

                    <!-- View All Reviews Button -->
                    <TextView
                        android:id="@+id/view_all_reviews"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="View all reviews"
                        android:textColor="#FFD700"
                        android:textSize="14sp"
                        android:layout_gravity="center"
                        android:padding="8dp"
                        android:layout_marginTop="4dp"
                        android:drawableEnd="@drawable/back"
                        android:drawablePadding="4dp"/>

                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- Doctor Details Card -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="6dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="20dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Personal Information"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:textColor="#1E3A5F"
                        android:layout_marginBottom="16dp"/>

                    <!-- Specialization -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginBottom="12dp">

                        <ImageView
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:src="@drawable/baseline_biotech_24"
                            android:layout_gravity="center_vertical"
                            android:contentDescription="Specialization icon"/>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:layout_marginStart="16dp">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Specialization"
                                android:textSize="16sp"
                                android:textStyle="bold"
                                android:textColor="#1E3A5F"/>

                            <TextView
                                android:id="@+id/doctor_detail_specialization"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:textSize="14sp"
                                android:textColor="#444444"
                                android:layout_marginTop="4dp"/>
                        </LinearLayout>
                    </LinearLayout>

                    <!-- Email -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginBottom="12dp">

                        <ImageView
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:src="@drawable/email"
                            android:layout_gravity="center_vertical"
                            android:contentDescription="Email icon"/>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:layout_marginStart="16dp">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Email"
                                android:textSize="16sp"
                                android:textStyle="bold"
                                android:textColor="#1E3A5F"/>

                            <TextView
                                android:id="@+id/doctor_detail_email"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:textSize="14sp"
                                android:textColor="#444444"
                                android:layout_marginTop="4dp"/>
                        </LinearLayout>
                    </LinearLayout>

                    <!-- Phone -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginBottom="12dp">

                        <ImageView
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:src="@drawable/phone"
                            android:layout_gravity="center_vertical"
                            android:contentDescription="Phone icon"/>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:layout_marginStart="16dp">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Phone"
                                android:textSize="16sp"
                                android:textStyle="bold"
                                android:textColor="#1E3A5F"/>

                            <TextView
                                android:id="@+id/doctor_detail_phone"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:textSize="14sp"
                                android:textColor="#444444"
                                android:layout_marginTop="4dp"/>
                        </LinearLayout>
                    </LinearLayout>

                    <!-- Gender -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginBottom="12dp">

                        <ImageView
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:src="@drawable/blackperson"
                            android:layout_gravity="center_vertical"
                            android:contentDescription="Gender icon"/>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:layout_marginStart="16dp">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Gender"
                                android:textSize="16sp"
                                android:textStyle="bold"
                                android:textColor="#1E3A5F"/>

                            <TextView
                                android:id="@+id/doctor_detail_gender"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:textSize="14sp"
                                android:textColor="#444444"
                                android:layout_marginTop="4dp"/>
                        </LinearLayout>
                    </LinearLayout>

                    <!-- City -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginBottom="12dp">

                        <ImageView
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:src="@drawable/locationpin"
                            android:layout_gravity="center_vertical"
                            android:contentDescription="City icon"/>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:layout_marginStart="16dp">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="City"
                                android:textSize="16sp"
                                android:textStyle="bold"
                                android:textColor="#1E3A5F"/>

                            <TextView
                                android:id="@+id/doctor_detail_city"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:textSize="14sp"
                                android:textColor="#444444"
                                android:layout_marginTop="4dp"/>
                        </LinearLayout>
                    </LinearLayout>

                    <!-- Doctor ID -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:layout_gravity="center_vertical"
                            android:contentDescription="ID icon"/>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:layout_marginStart="16dp">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Doctor's ID"
                                android:textSize="16sp"
                                android:textStyle="bold"
                                android:textColor="#1E3A5F"/>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:layout_marginTop="4dp">

                                <TextView
                                    android:id="@+id/doctor_detail_id"
                                    android:layout_width="0dp"
                                    android:layout_weight="1"
                                    android:layout_height="wrap_content"
                                    android:textSize="14sp"
                                    android:drawableLeft="@drawable/copy"
                                    android:textColor="#444444"/>

                            </LinearLayout>
                        </LinearLayout>
                    </LinearLayout>

                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- Latest Reviews Card -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="6dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="wrap_content"
                            android:text="Latest Reviews"
                            android:textSize="18sp"
                            android:textStyle="bold"
                            android:textColor="#1E3A5F"/>

                        <TextView
                            android:id="@+id/view_all_reviews_bottom"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="View All"
                            android:textColor="#1E3A5F"
                            android:textSize="14sp"
                            android:padding="4dp"/>
                    </LinearLayout>

                    <!-- Sample Review 1 -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_marginTop="12dp"
                        android:background="#F8F8F8"
                        android:padding="12dp"
                        android:layout_marginBottom="8dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <ImageView
                                android:layout_width="36dp"
                                android:layout_height="36dp"
                                android:src="@drawable/person1"
                                android:contentDescription="User Avatar"/>

                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_weight="1"
                                android:layout_height="wrap_content"
                                android:orientation="vertical"
                                android:layout_marginStart="12dp">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Sarah Johnson"
                                    android:textSize="14sp"
                                    android:textStyle="bold"
                                    android:textColor="#1E3A5F"/>

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="2 days ago"
                                    android:textSize="12sp"
                                    android:textColor="#777777"/>
                            </LinearLayout>

                            <RatingBar
                                style="?android:attr/ratingBarStyleSmall"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:numStars="5"
                                android:rating="5"
                                android:progressTint="#FFD700"
                                android:isIndicator="true"/>
                        </LinearLayout>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Dr. Smith was incredibly thorough and took the time to explain everything. Very satisfied with my appointment."
                            android:textSize="14sp"
                            android:textColor="#444444"
                            android:layout_marginTop="8dp"/>
                    </LinearLayout>

                    <!-- Sample Review 2 -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:background="#F8F8F8"
                        android:padding="12dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <ImageView
                                android:layout_width="36dp"
                                android:layout_height="36dp"
                                android:src="@drawable/person1"
                                android:contentDescription="User Avatar"/>

                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_weight="1"
                                android:layout_height="wrap_content"
                                android:orientation="vertical"
                                android:layout_marginStart="12dp">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Michael Brown"
                                    android:textSize="14sp"
                                    android:textStyle="bold"
                                    android:textColor="#1E3A5F"/>

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="1 week ago"
                                    android:textSize="12sp"
                                    android:textColor="#777777"/>
                            </LinearLayout>

                            <RatingBar
                                style="?android:attr/ratingBarStyleSmall"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:numStars="5"
                                android:rating="4"
                                android:progressTint="#FFD700"
                                android:isIndicator="true"/>
                        </LinearLayout>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Great doctor, very knowledgeable. The wait time was a bit longer than expected but the care was worth it."
                            android:textSize="14sp"
                            android:textColor="#444444"
                            android:layout_marginTop="8dp"/>
                    </LinearLayout>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- Appointment & Request Buttons -->
            <Button
                android:id="@+id/bookappointment"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:text="Book Appointment"
                android:textSize="16sp"
                android:textColor="#FFFFFF"
                android:fontFamily="sans-serif-medium"
                android:padding="15dp"
                android:layout_gravity="center"
                android:background="@drawable/button_gradient"/>

            <Button
                android:id="@+id/requestButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="20dp"
                android:text="Send Request"
                android:textSize="16sp"
                android:textColor="#FFFFFF"
                android:fontFamily="sans-serif-medium"
                android:padding="15dp"
                android:layout_gravity="center"
                android:background="@drawable/button_gradient_alt"/>

        </LinearLayout>
    </ScrollView>

    <ProgressBar
        android:id="@+id/doctor_detail_progress"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:visibility="gone"/>

</RelativeLayout>