<!--            android:textSize="16sp"-->
<!--            android:textColor="#FFFFFF"-->
<!--            android:padding="16dp"-->
<!--            android:layout_marginTop="8dp" />-->
    </LinearLayout>
</androidx.cardview.widget.CardView>