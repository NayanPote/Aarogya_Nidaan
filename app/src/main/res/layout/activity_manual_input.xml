<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="@color/white">

    <EditText
        android:id="@+id/temperatureInput"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="12dp"
        android:hint="Temperature (Â°C)"
        android:inputType="numberDecimal"/>

    <EditText
        android:id="@+id/heartRateInput"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="7dp"
        android:padding="12dp"
        android:hint="Heart Rate (bpm)"
        android:inputType="number"/>

    <EditText
        android:id="@+id/bloodPressureInput"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="12dp"
        android:layout_marginTop="7dp"
        android:hint="Blood Pressure (mmHg)"
        android:inputType="text"/>

    <EditText
        android:id="@+id/oxygenSaturationInput"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="7dp"
        android:padding="12dp"
        android:hint="Oxygen Saturation (%)"
        android:inputType="number"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="16dp">

    </LinearLayout>
</LinearLayout>