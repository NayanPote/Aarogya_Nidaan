<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/main"
    tools:context=".loginpage">

    <!-- Animated gradient background -->
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        android:src="@drawable/useful1" />

    <!-- Overlay for depth -->
    <View
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/useful2" />

    <!-- Decorative wave pattern at the top -->
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:layout_alignParentTop="true"
        android:scaleType="fitXY"
        android:src="@drawable/wave_pattern_top"
        android:alpha="0.7" />



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="80dp"
        android:orientation="vertical"
        android:padding="24dp"
        android:gravity="center_horizontal">

        <!-- Logo Container with Ripple Effect -->
        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="200dp"
            android:layout_gravity="center">

            <androidx.cardview.widget.CardView
                android:id="@+id/logo_container"
                android:layout_width="160dp"
                android:layout_height="160dp"
                app:cardCornerRadius="80dp"
                app:cardElevation="16dp"
                android:layout_marginTop="10dp">

                <ImageView
                    android:id="@+id/logo"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:padding="20dp"
                    android:src="@drawable/aarogyanidaanlogo"
                    android:background="@drawable/logo_glow_background" />

                <!-- Inner Ripple effect around logo -->
                <View
                    android:id="@+id/logo_ripple_effect"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/logo_ripple_animation" />

                <!-- Animated background with ripple effect -->
                <View
                    android:id="@+id/ripple_effect"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/ripple_animation" />
            </androidx.cardview.widget.CardView>
        </FrameLayout>

        <TextView
            android:id="@+id/tagline"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:layout_gravity="center"
            android:text="True Diagnosis for Wellness"
            android:textColor="@color/white"
            android:textSize="20sp"
            android:textStyle="bold"
            android:letterSpacing="0.08"
            android:elevation="4dp"
            android:shadowColor="#80000000"
            android:shadowDx="1"
            android:shadowDy="1"
            android:shadowRadius="4"/>

        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="32dp"
            app:cardCornerRadius="24dp"
            app:cardElevation="12dp"
            app:strokeWidth="1dp"
            app:strokeColor="#40FFFFFF"
            app:cardBackgroundColor="#E6FFFFFF">

            <!-- Subtle background pattern -->
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                android:alpha="0.05" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="24dp">


                <!-- Enhanced Username Field -->
                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="20dp"
                    android:hint="Enter Email"
                    app:boxBackgroundMode="outline"
                    app:boxStrokeWidth="1.5dp"
                    app:boxCornerRadiusBottomEnd="16dp"
                    app:boxCornerRadiusBottomStart="16dp"
                    app:boxCornerRadiusTopEnd="16dp"
                    app:boxCornerRadiusTopStart="16dp"
                    app:startIconDrawable="@drawable/blackperson"
                    app:startIconTint="@color/main_dark"
                    app:hintTextColor="@color/main_dark"
                    app:hintAnimationEnabled="true"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/emailInput"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@android:color/transparent"
                        android:inputType="textPersonName"
                        android:paddingTop="16dp"
                        android:paddingBottom="16dp"
                        android:textColor="@color/main_dark" />
                </com.google.android.material.textfield.TextInputLayout>

                <!-- Enhanced Password Field -->
                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    android:hint="Password"
                    app:boxBackgroundMode="outline"
                    app:boxStrokeWidth="1.5dp"
                    app:boxCornerRadiusBottomEnd="16dp"
                    app:boxCornerRadiusBottomStart="16dp"
                    app:boxCornerRadiusTopEnd="16dp"
                    app:boxCornerRadiusTopStart="16dp"
                    app:startIconDrawable="@drawable/passwordicon"
                    app:startIconTint="@color/main_dark"
                    app:hintTextColor="@color/main_dark"
                    app:passwordToggleEnabled="true"
                    app:passwordToggleTint="@color/main_dark"
                    app:hintAnimationEnabled="true"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/passwordInput"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@android:color/transparent"
                        android:inputType="textPassword"
                        android:paddingTop="16dp"
                        android:paddingBottom="16dp"
                        android:textColor="@color/main_dark" />
                </com.google.android.material.textfield.TextInputLayout>

                <!-- Remember Me & New User Section -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="8dp"
                    android:paddingStart="4dp"
                    android:paddingEnd="4dp">

                    <CheckBox
                        android:id="@+id/rememberme"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Remember me"
                        android:textSize="14sp"
                        android:textColor="#000000" />

                    <TextView
                        android:id="@+id/newuser"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="end"
                        android:text="New? Register."
                        android:textSize="14sp"
                        android:textColor="#000000" />
                </LinearLayout>

                <!-- Enhanced Login Button with ripple and gradient -->
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/loginbutton"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:layout_marginTop="12dp"
                    android:gravity="center"
                    android:text="LOGIN"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:letterSpacing="0.1"
                    app:cornerRadius="12dp"
                    app:backgroundTint="@color/main_dark"
                    app:elevation="4dp" />
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

    </LinearLayout>

    <!-- Decorative wave pattern at the bottom -->
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:layout_alignParentBottom="true"
        android:scaleType="fitXY"
        android:src="@drawable/wave_pattern_bottom"
        android:alpha="0.7" />
</RelativeLayout>


