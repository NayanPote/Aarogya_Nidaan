<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:foreground="?attr/selectableItemBackground"
    app:cardBackgroundColor="@color/white">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/premium_gradient_background">

        <!-- Top decorative arc -->
        <View
            android:id="@+id/decorative_arc"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:background="@drawable/top_wave_shape"
            android:layout_alignParentTop="true"/>

        <!-- Doctor Avatar with circular frame -->
        <androidx.cardview.widget.CardView
            android:id="@+id/avatar_container"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="16dp"
            app:cardCornerRadius="50dp"
            app:cardElevation="8dp">

            <ImageView
                android:id="@+id/doctoravatar"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                android:src="@drawable/doctoravatar3" />
        </androidx.cardview.widget.CardView>

        <!-- Doctor Details -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@id/avatar_container"
            android:layout_marginStart="16dp"
            android:layout_marginTop="24dp"
            android:layout_marginEnd="16dp"
            android:orientation="vertical">

            <!-- Doctor Name with Verified Badge -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <TextView
                    android:id="@+id/doctorlistname"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginEnd="5dp"
                    android:text="Dr. Nayan Pote"
                    android:textColor="#CFD8DC "
                    android:textSize="22sp"
                    android:fontFamily="@font/poppins_bold"
                    android:maxLines="1"
                    android:ellipsize="end" />

                <ImageView
                    android:id="@+id/verified_badge"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:gravity="center_vertical"
                    android:src="@drawable/ic_verify"
                    android:contentDescription="Verified Doctor" />
            </LinearLayout>

            <!-- Rating -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <RatingBar
                    android:id="@+id/doctor_rating"
                    style="?android:attr/ratingBarStyleSmall"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:rating="4.8"
                    android:progressTint="@color/gold"
                    android:isIndicator="true" />

                <TextView
                    android:id="@+id/rating_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="4.8"
                    android:textColor="@color/gold"
                    android:textSize="14sp"
                    android:layout_marginStart="8dp"/>

                <TextView
                    android:id="@+id/reviews_count"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="(236 reviews)"
                    android:textColor="@color/text_secondary"
                    android:textSize="12sp"
                    android:layout_marginStart="4dp"
                    android:fontFamily="@font/poppins_regular" />
            </LinearLayout>

            <!-- Specialization with enhanced styling -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_marginTop="12dp"
                android:background="@drawable/premium_pill_background"
                android:paddingStart="12dp"
                android:paddingEnd="16dp"
                android:paddingTop="8dp"
                android:paddingBottom="8dp"
                android:orientation="horizontal"
                android:elevation="4dp">

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_gravity="center_vertical"
                    android:src="@drawable/stethoscope" />

                <TextView
                    android:id="@+id/doctorlistspe"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginStart="8dp"
                    android:text="Cardiologist"
                    android:textColor="@color/primary_dark"
                    android:textStyle="bold"
                    android:textSize="15sp"/>
            </LinearLayout>

            <!-- Location with enhanced styling -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="16dp"
                android:background="@drawable/premium_pill_background"
                android:paddingStart="12dp"
                android:paddingEnd="16dp"
                android:paddingTop="8dp"
                android:paddingBottom="8dp"
                android:orientation="horizontal"
                android:elevation="4dp">

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_gravity="center_vertical"
                    android:src="@drawable/locationpin" />

                <TextView
                    android:id="@+id/doclistcity"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginStart="8dp"
                    android:text="New York City"
                    android:textColor="@color/primary_dark"
                    android:textStyle="bold"
                    android:textSize="15sp"/>
            </LinearLayout>
        </LinearLayout>

        <!-- Book Appointment Button -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_book_appointment"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:layout_below="@id/avatar_container"
            android:text="Book Appointment"
            android:textSize="16sp"
            android:fontFamily="@font/poppins_bold"
            android:textAllCaps="false"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:layout_marginBottom="16dp"
            app:cornerRadius="28dp"
            android:visibility="gone"
            app:backgroundTint="@color/accent_color"
            app:rippleColor="@color/ripple_color"
            app:icon="@drawable/colorcalander"
            app:iconGravity="textStart"
            app:iconPadding="8dp" />
    </RelativeLayout>
</androidx.cardview.widget.CardView>