<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    android:background="@drawable/button1">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="16dp"
        app:cardElevation="8dp"
        android:layout_margin="5dp"
        app:cardBackgroundColor="#1E3A5F">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/toolbar_gradiant"
            android:padding="12dp">

            <!-- Top Section with Avatar and Status Indicator -->
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/doctorAvatar"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:src="@drawable/doctoravatar2"
                    app:civ_border_width="2dp"
                    app:civ_border_color="#FFFFFF"/>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toEndOf="@id/doctorAvatar"
                    android:layout_marginStart="12dp"
                    android:layout_centerVertical="true"
                    android:orientation="vertical">

                    <!-- Doctor Name -->
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Doctor:"
                            android:textColor="#B6B5B5"
                            android:textStyle="bold"
                            android:textSize="16sp"/>

                        <TextView
                            android:id="@+id/doctorNameText"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Doctor Name"
                            android:textStyle="bold"
                            android:layout_marginStart="8dp"
                            android:textColor="#FFFFFF"
                            android:textSize="18sp"/>
                    </LinearLayout>

                    <!-- Specialty -->
                    <TextView
                        android:id="@+id/doctorSpecialty"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Cardiologist"
                        android:textColor="#8DA9C4"
                        android:textSize="14sp"/>

                    <!-- Status Indicator -->
                    <androidx.cardview.widget.CardView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"
                        app:cardCornerRadius="12dp"
                        android:layout_marginTop="4dp"
                        app:cardBackgroundColor="#4CAF50">

                        <TextView
                            android:id="@+id/statusText"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Confirmed"
                            android:textColor="#FFFFFF"
                            android:textSize="14sp"
                            android:paddingStart="12dp"
                            android:paddingEnd="12dp"
                            android:paddingTop="6dp"
                            android:paddingBottom="6dp"/>
                    </androidx.cardview.widget.CardView>
                </LinearLayout>

            </RelativeLayout>

            <!-- Divider -->
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#33FFFFFF"
                android:layout_marginTop="4dp"
                android:layout_marginBottom="12dp"/>

            <!-- Patient Section -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <!-- Patient Name -->
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Patient:"
                        android:textColor="#B6B5B5"
                        android:textStyle="bold"
                        android:textSize="16sp"/>

                    <TextView
                        android:id="@+id/patientNameText"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Patient Name"
                        android:layout_marginStart="8dp"
                        android:textStyle="bold"
                        android:textColor="#FFFFFF"
                        android:textSize="18sp"/>
                </LinearLayout>

                <!-- Patient Details -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="8dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="â€¢"
                        android:textColor="#8DA9C4"
                        android:textSize="14sp"
                        android:layout_marginStart="8dp"/>

                    <TextView
                        android:id="@+id/patientId"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="ID: 12345"
                        android:textColor="#8DA9C4"
                        android:textSize="14sp"
                        android:layout_marginStart="8dp"/>
                </LinearLayout>
            </LinearLayout>

            <!-- Appointment Details -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="16dp">

                <!-- Date and Time Card -->
                <androidx.cardview.widget.CardView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    app:cardCornerRadius="12dp"
                    app:cardBackgroundColor="#2C4B73"
                    android:layout_marginEnd="6dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:padding="10dp">

                        <ImageView
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:src="@drawable/colorcalander"
                            android:layout_gravity="center_vertical"/>

                        <TextView
                            android:id="@+id/dateText"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Date and Time"
                            android:textColor="@color/white"
                            android:textSize="15sp"
                            android:layout_marginStart="8dp"
                            android:layout_gravity="center_vertical"/>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <!-- Duration Card -->
                <androidx.cardview.widget.CardView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    app:cardCornerRadius="12dp"
                    app:cardBackgroundColor="#2C4B73"
                    android:layout_marginStart="6dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:padding="10dp">

                        <ImageView
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:src="@drawable/clock"
                            android:layout_gravity="center_vertical"/>

                        <TextView
                            android:id="@+id/TimeText"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="30 minutes"
                            android:textColor="@color/white"
                            android:textSize="15sp"
                            android:layout_marginStart="8dp"
                            android:layout_gravity="center_vertical"/>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>
            </LinearLayout>

            <!-- Appointment Type -->
            <TextView
                android:id="@+id/appointmentType"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Regular Check-up"
                android:textColor="#8DA9C4"
                android:textSize="14sp"
                android:layout_marginTop="10dp"
                android:layout_marginStart="10dp"/>

            <!-- Countdown -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="16dp">

                <ImageView
                    android:layout_width="18dp"
                    android:layout_height="18dp"
                    android:src="@drawable/ic_countdown"
                    android:layout_gravity="center_vertical"
                    android:layout_marginStart="10dp"/>

                <TextView
                    android:id="@+id/countdownText"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Starts in 2 days, 3 hours"
                    android:textColor="#FFD700"
                    android:textSize="14sp"
                    android:layout_marginStart="8dp"
                    android:layout_gravity="center_vertical"/>
            </LinearLayout>

            <!-- Bottom Buttons -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="16dp">

                <Button
                    android:id="@+id/rescheduleButton"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Reschedule"
                    android:textAllCaps="false"
                    android:layout_marginEnd="6dp"
                    android:textColor="#1E3A5F"
                    android:background="@drawable/button_white_rounded"
                    app:backgroundTint="#E0E0E0"/>

                <Button
                    android:id="@+id/cancelButton"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Cancel"
                    android:textAllCaps="false"
                    android:layout_marginStart="6dp"
                    android:textColor="@color/white"
                    android:background="@drawable/button_red_rounded"
                    app:backgroundTint="#FF5252"/>
            </LinearLayout>
        </LinearLayout>
    </androidx.cardview.widget.CardView>
</RelativeLayout>